@using Task9.Domain
@model Group

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <form method="post">
            <div class="validation" asp-validation-summary="All"></div>
            <label>Введите новое название группы</label><br />
            <input asp-for="Name" type="text" name="nameGroup" /><br />
            <span asp-validation-for="Name"></span>
            <input type="submit" value="Сохранить изменение" />
        </form>
        <div>

            <button class="test">@Html.ActionLink("Удалить группу", "Delete", "Group", new { id = Model.GroupId })  </button>
        </div>
    </div>
    <script src="~/js/bundleValidation.min.js" asp-append-version="true"></script>
</body>
</html>

