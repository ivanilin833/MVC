@using Task9.Domain
@model Course

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        Добавление нового курса
        <form method="post" asp-controller="Courses" asp-action="Add">
            <div asp-validation-summary="All" class="validator"></div>
            <div class="form-group">
                <label>Введите название курса</label><br />
                <input type="text" name="nameCourse" asp-for="Name" class="form-control" /><br />
                <span asp-validation-for="Name" class="text-danger"></span><br />
            </div>
            <div class="form-group">
                <label>Введите описание курса</label><br />
                <input type="text" name="descriptionCourse" asp-for="Description" class="form-control" /><br />
                <span asp-validation-for="Description" class="text-danger"></span><br />
                <input type="submit" value="Сохранить изменение" />
            </div>
        </form>
    </div>
    <script src="~/js/bundleValidation.min.js" asp-append-version="true"></script>
</body>
</html>
